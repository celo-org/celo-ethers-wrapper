{
  "name": "@celo-tools/celo-ethers-wrapper",
  "version": "2.0.0",
  "description": "A minimal wrapper to make Ethers.JS compatible with the Celo network.",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/celo-tools/celo-ethers-wrapper",
  "license": "MIT",
  "author": "J M Rossy",
  "keywords": [
    "Celo",
    "Ethers"
  ],
  "scripts": {
    "clean": "rm -rf build",
    "build": "yarn build:main && yarn build:module",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "test": "yarn test:contract && yarn test:deploy && yarn test:history",
    "test:contract": "ts-node test/useContract.ts",
    "test:deploy": "ts-node test/deployContract.ts",
    "test:history": "ts-node test/getHistory.ts"
  },
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@types/node": "^20.8.2",
    "ethers": "^6.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "ethers": "^6"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "LICENSE",
    "README.md"
  ],
  "packageManager": "yarn@3.6.1"
}
